<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <div class="d-flex">
        <form class="w-50"> 
            <h3 class="text-success"> Bookings Futsal</h3>
  <div class="form-group ">
    <label for="exampleFormControlInput1">Your Name</label>
    <input disabled type="text" class="form-control" id="exampleFormControlInput1" placeholder="name@example.com">
  </div>
   <div class="form-group">
    <label for="exampleFormControlInput1">Date and Time </label>
    <input type="text" class="form-control" id="exampleFormControlInput2" placeholder="name@example.com">
  </div>

  <div class="form-group">
    <label for="exampleFormControlTextarea1">Why you want to book?</label>
    <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
  </div>
  <button type="submit"  class="btn btn-success mb-2">Book Futsal</button>
</form>
<div class="w-50 ">
<h3 class="text-success">All Bookings</h3>
</div>
    </div>
<script>
   $(document).ready(function() {
    var getSess = sessionStorage.getItem('username');
    $('#exampleFormControlInput1').val(getSess);
   });
      $('form').submit(function(e) {
        e.preventDefault(); // Prevent form submission

        // Get the form input values
        var nameInp = $('#exampleFormControlInput1').val();
        var timeInp = $('#exampleFormControlInput2').val();
        var descInp = $('#exampleFormControlTextarea1').val();

        // Send an AJAX request to check the combination
        $.ajax({
         
      
          type: 'POST',
          url: 'https://jom-tapau-backend.onrender.com/food',
    data: 
      JSON.stringify(  {name: `${nameInp}`,
    time: `${timeInp}`,
    description: `${descInp}`})
    ,
    contentType: 'application/json',
          success: function(data) {

              console.log(data);
          
          },
          error: function() {
            // Display error message
            $('#errorMessage').text('An error occurred during form submission.');
          }
        });
      });
</script>
</body>
</html>